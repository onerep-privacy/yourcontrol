{
  "manifest_version": 3,
  "name": "YourControl",
  "version": "1.0",
  "description": "A free privacy tool courtesy of Onerep",
  "permissions": ["activeTab", "sidePanel"],
  "action": {
    "default_title": "YourControl",
    "default_icon": {
      "16": "/icon16.png",
      "24": "/icon24.png",
      "32": "/icon32.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "/icon16.png",
    "48": "/icon48.png",
    "128": "/icon128.png"
  }
}
